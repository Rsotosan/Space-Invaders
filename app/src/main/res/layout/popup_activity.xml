<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ceaac"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fondo_opcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Fondo" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fondo" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fondo1" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fondo3" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/nave_opcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Nave"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/diseno11"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/diseno21"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/diseno31"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VOLVER"
                    android:id="@+id/volver_boton"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/enemigo_opcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enemigos"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
